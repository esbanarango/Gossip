<% publish_to "/rooms/#{@message.room_id}" do %>
	var content = $("<div/>").html("<%= j render(@message) %>");
	var msgOwner = content.find(".bodyMessages");

	if($(msgOwner).data("id") !=  $(".elpropio").attr("id")){
		content.find(".bodyMessages").removeClass("me")
	}

  $("#chat").append(content.html());

  $("#messages-inner").animate({ scrollTop: $("#chat").prop('scrollHeight')}, 1000);

<% end %>
  $("#new_message")[0].reset();